<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-success bg-opacity-75 rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :username, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class= "d-flex justify-content-evenly">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end%>
    </div>
  <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "d-flex justify-content-center mb-3 text-success"%> 
  </div>
</div>
