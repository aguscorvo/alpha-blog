<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-success bg-opacity-75 rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :title, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :description, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class= "d-flex justify-content-evenly">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end%>
    </div>
  <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "d-flex justify-content-center mb-3 text-success"%> 
  </div>
</div>